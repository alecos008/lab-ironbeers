<div class='card' style='width: 18rem;'>
  <a href='/beers/{{this.id}}'><img
      src='{{this.image_url}}'
      alt='beer image'
      width='96'
    /></a>
  <div class='card-body'>
    <h5 class='card-title'>{{this.name}}</h5>
    <p class='card-text'>{{this.description}}</p>
    <p class='card-text'>{{this.tagline}}</p>
    {{{p}}}
    {{{p}}}
  </div>
</div>